#include<iostream.h>
#include<conio.h>
using namespace std;

int main()
{
    int a[5][5],b[5][5],c[5][5],row,col,i,j;
    clrscr();
    cout<<"Enter the matrix size(rows then cols):\n";
    cin>>row>>col;

    cout<<"Enter the matrix of A:\n";
    for(i=0; i<row; i++)
    {
        for(j=0; j<col; j++)
        {
            cin>>a[i][j];
        }
    }
    cout<<"Enter the matrix of B";
    for(i=0; i<row; i++)
    {
        for(j=0; j<col; j++)
        {
            cin>>b[i][j];
        }
    }
    cout<<"sparse matrix of A"<<endl;
    for(i=0; i<row; i++)
    {
        for(j=0; j<col; j++)
        {   
	if(a[i][j]!=0)
            {   
		    cout<<i+1<<j+1<<a[i][j]<<endl;
            }
        }
    }
    cout<<"Sparse Matrix of B"<<endl;
    for(i=0; i<row; i++)
    {
        for(j=0; j<col; j++)
        {
		if(b[i][j]!=0)
            {
                cout<<i+1<<j+1<<b[i][j]<<endl;
            }
        }
    }
    cout<<"Sum of two sparse matrix";
    for(i=0; i<row; i++)
    {
        for(j=0; j<col; j++)
        {
            if(a[i][j]!=0 || b[i][j]!=0)
            {
                c[i][j]=a[i][j]+b[i][j];
                cout<<i+1<<j+1<<c[i][j]<<endl;
            }
        }
    }
    getch();
    return 0;
}
